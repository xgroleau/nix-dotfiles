set $text_active    #f8f4e8
set $text_inactive  #aea79f
set $focus          #516fa8
set $urgent         #771f3f
set $active         #314366
set $inactive       #282c33

#                       border      background  text
client.focused          $focus      $focus      $text_active
client.focused_inactive $active     $active     $text_inactive
client.unfocused        $inactive   $inactive   $text_inactive
client.urgent           $urgent     $urgent     $text_inactive

bar {
    id bar-tray
    i3bar_command i3bar --transparency
    colors {
        background $transparent
    }
    position bottom
    tray_padding 0
    tray_output primary
    workspace_buttons no
    mode hide
    hidden_state hide
    modifier $show_tray
}


