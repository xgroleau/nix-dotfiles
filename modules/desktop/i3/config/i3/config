bindsym $mod+1 workspace number $ws1; exec $focus_on; workspace number $ws1;
bindsym $mod+2 workspace number $ws2; exec $focus_on; workspace number $ws2;
bindsym $mod+3 workspace number $ws3; exec $focus_on; workspace number $ws3;
bindsym $mod+4 workspace number $ws4; exec $focus_on; workspace number $ws4;
bindsym $mod+5 workspace number $ws5; exec $focus_on; workspace number $ws5;
bindsym $mod+6 workspace number $ws6; exec $focus_on; workspace number $ws6;
bindsym $mod+7 workspace number $ws7; exec $focus_on; workspace number $ws7;
bindsym $mod+8 workspace number $ws8; exec $focus_on; workspace number $ws8;
bindsym $mod+9 workspace number $ws9; exec $focus_on; workspace number $ws9;
